@model BitirmeProjesi.Models.PollutionData

@{
    ViewData["Title"] = "Veri Girişi";
}

<!-- Material Design Bootstrap CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/pollution-entry.css" />

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <i class="fas fa-leaf text-primary me-2"></i>
            EcoTrack
        </a>
        <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarNav">
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="fas fa-home me-2"></i>Ana Sayfa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/PollutionEntry/Create">
                        <i class="fas fa-plus-circle me-2"></i>Veri Girişi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PollutionEntry/Map">
                        <i class="fas fa-map-marked-alt me-2"></i>Harita
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/PollutionEntry/Statistics">
                        <i class="fas fa-chart-bar me-2"></i>İstatistikler
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold mb-1">Kirlilik Verisi Girişi</h2>
                        <p class="text-muted">Lütfen ölçüm değerlerini dikkatli bir şekilde giriniz</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                        </div>
                    }

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-outline">
                                    <input asp-for="Latitude" type="number" step="any" id="latitude" class="form-control" />
                                    <label class="form-label" asp-for="Latitude">
                                        <i class="fas fa-map-marker-alt me-2"></i>Enlem
                                    </label>
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-outline">
                                    <input asp-for="Longitude" type="number" step="any" id="longitude" class="form-control" />
                                    <label class="form-label" asp-for="Longitude">
                                        <i class="fas fa-map-marker-alt me-2"></i>Boylam
                                    </label>
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-outline mb-4">
                            <select asp-for="MetalType" class="form-select">
                                <option value="">Metal Tipini Seçin</option>
                                <option value="Kurşun">Kurşun (Pb)</option>
                                <option value="Civa">Civa (Hg)</option>
<nav class="navbar">
    <a href="/" class="navbar-brand">
        <i class="fas fa-leaf"></i>
        EcoTrack
    </a>
    <button class="navbar-toggler" type="button">
        <i class="fas fa-bars"></i>
    </button>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="/" class="nav-link">
                <i class="fas fa-home"></i>
                Ana Sayfa
            </a>
        </li>
        <li class="nav-item">
            <a href="/PollutionEntry/Create" class="nav-link active">
                <i class="fas fa-plus-circle"></i>
                Veri Girişi
            </a>
        </li>
        <li class="nav-item">
            <a href="/PollutionEntry/Map" class="nav-link">
                <i class="fas fa-map-marked-alt"></i>
                Harita
            </a>
        </li>
        <li class="nav-item">
            <a href="/PollutionEntry/Statistics" class="nav-link">
                <i class="fas fa-chart-bar"></i>
                İstatistikler
            </a>
        </li>
    </ul>
</nav>

<div class="modern-container">
    <div class="modern-form-container">
        <div class="form-header">
            <h2>Kirlilik Verisi Girişi</h2>
            <p class="form-subtitle">Lütfen ölçüm değerlerini dikkatli bir şekilde giriniz</p>
        </div>
        
        @if (TempData["Success"] != null)
        {
            <div class="success-message">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        <form asp-action="Create" class="modern-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-row">
                <div class="input-group">
                    <label asp-for="Latitude">
                        <i class="fas fa-map-marker-alt"></i>
                        Enlem
                    </label>
                    <input asp-for="Latitude" class="modern-input" placeholder="41.0082" />
                    <span asp-validation-for="Latitude" class="validation-message"></span>
                </div>

                <div class="input-group">
                    <label asp-for="Longitude">
                        <i class="fas fa-map-marker-alt"></i>
                        Boylam
                    </label>
                    <input asp-for="Longitude" class="modern-input" placeholder="28.9784" />
                    <span asp-validation-for="Longitude" class="validation-message"></span>
                </div>
            </div>

            <div class="input-group">
                <label asp-for="MetalType">
                    <i class="fas fa-flask"></i>
                    Metal Tipi
                </label>
                <select asp-for="MetalType" class="modern-input">
                    <option value="">Metal Tipini Seçin</option>
                    <option value="Kurşun">Kurşun (Pb)</option>
                    <option value="Civa">Civa (Hg)</option>
                    <option value="Kadmiyum">Kadmiyum (Cd)</option>
                    <option value="Arsenik">Arsenik (As)</option>
                </select>
                <span asp-validation-for="MetalType" class="validation-message"></span>
            </div>

            <div class="input-group">
                <label asp-for="Value">
                    <i class="fas fa-vial"></i>
                    Ölçüm Değeri (mg/kg)
                </label>
                <input asp-for="Value" class="modern-input" placeholder="0.00" />
                <span asp-validation-for="Value" class="validation-message"></span>
            </div>

            <button type="submit" class="submit-button">
                <i class="fas fa-save"></i>
                Kaydet
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
    <script>
        document.querySelector('.navbar-toggler').addEventListener('click', function() {
            document.querySelector('.navbar-nav').classList.toggle('show');
        });
    </script>
} 