@model BitirmeProjesi.ViewModels.RegisterViewModel

    <style>
        .register-container {
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            width: 400px;
            margin: 10rem auto 0;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        input[type="text"], input[type="password"], input[type="email"] {
            margin-bottom: 5px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
        }

        .validation-summary-errors {
            color: #dc3545;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .validation-summary-errors ul {
            margin-bottom: 0;
            padding-left: 20px;
        }

        .field-validation-error {
            color: #dc3545;
            font-size: 0.875rem;
            display: block;
            margin-bottom: 15px;
        }

        .alert {
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }
    </style>
    <div class="register-container">
        <h2>Kayıt Ol</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="field-validation-error"></span>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Şifreyi Onayla</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}