<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Özel CSS -->
    <style>

        body {
            background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
            min-height: 100vh;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.8); /* Şeffaf kart arka planı */
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
        }

        .form-floating input {
            border-radius: 10px;
        }

        .login-btn {
            background-color: #ff5722; /* Göz alıcı bir buton rengi */
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 1.2rem;
        }

            .login-btn:hover {
                background-color: #e64a19;
            }

        .navbar {
            background-color: #007bff;
            padding: 1rem;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
            height:75px;
        }

            .navbar a {
                color: white;
                margin-right: 20px;
                text-decoration: none;
                font-size: 1.2rem;
            }

        footer {
            background-color: #f8f9fa;
            padding: 1rem;
            text-align: center;
            width: 100%;
            z-index: 1000;
        }
    </style>
    <link rel="stylesheet" href="~/css/holographic.css" />
</head>
<body>


    <nav class="navbar">
        <div class="navbar-brand">Türkiye Ağır Metal Verileri</div>
        <div>
            <a href="/">Ana Sayfa</a>
            <a href="/Account/Login">Giriş Yap</a>
            <a href="/Account/Register">Kayıt Ol</a>
        </div>
    </nav>

        @RenderBody()
        <!--
      <footer>
          &copy; 2024 Türkiye Ağır Metal Verileri | <a class="footer-link" href="#">İletişim</a>
      </footer>
      -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
