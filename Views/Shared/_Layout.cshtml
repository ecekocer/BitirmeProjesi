<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Özel CSS -->
    <style>
        body {
            background-image: url('https://source.unsplash.com/1600x900/?nature'); /* Arka plan resmi */
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.8); /* Şeffaf kart arka planı */
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
        }

        .form-floating input {
            border-radius: 10px;
        }

        .login-btn {
            background-color: #ff5722; /* Göz alıcı bir buton rengi */
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 1.2rem;
        }

            .login-btn:hover {
                background-color: #e64a19;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
