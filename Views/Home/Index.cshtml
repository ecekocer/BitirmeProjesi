@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
<!-- MarkerCluster CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.css" />
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.Default.css" />


<div class="map-container">
    <div id="map"></div>
</div>


    <div class="side-panel">
        <div class="side-panel-content">
            <div class="filter-panel">
                <div class="d-flex justify-content-between align-items-center filter-header"
                     role="button"
                     data-bs-toggle="collapse" 
                     data-bs-target="#filterOptions" 
                     aria-expanded="false">
                    <h5 class="text-white mb-0">Filtreleme</h5>
                    <i class="fas fa-chevron-down text-white"></i>
                </div>
                
                <div class="collapse" id="filterOptions">
                    <div class="filter-section mt-3">
                        <label for="metalType" class="text-white">Metal Türü</label>
                        <select id="metalType" class="form-control">
                            <option value="">Tümü</option>
                            <option value="Kurşun">Kurşun (Pb)</option>
                            <option value="Kadmiyum">Kadmiyum (Cd)</option>
                            <option value="Civa">Civa (Hg)</option>
                            <option value="Arsenik">Arsenik (As)</option>
                            <option value="Krom">Krom (Cr)</option>
                            <option value="Bakır">Bakır (Cu)</option>
                            <option value="Nikel">Nikel (Ni)</option>
                            <option value="Çinko">Çinko (Zn)</option>
                        </select>
                    </div>

                    <div class="filter-section">
                        <label for="year" class="text-white">Yıl</label>
                        <select id="year" class="form-control">
                            <option value="">Tümü</option>
                            @for (int year = 2025; year >= 1960; year--)
                            {
                                <option value="@year">@year</option>
                            }
                        </select>
                    </div>

                    <div class="filter-buttons">
                        <button class="reset-filter" onclick="resetFilters()">
                            <i class="fas fa-undo me-2"></i>Sıfırla
                        </button>
                    </div>
                </div>
            </div>

            <div id="recordsPanel" class="records-panel mt-4">
                <!-- Records will be dynamically inserted here -->
            </div>
        </div>
        <div class="side-panel-footer">
            <button id="addDataButton" class="add-data-button">
                <i class="fas fa-plus"></i>
                Yeni Veri Ekle
            </button>
        </div>
    </div>

<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<!-- MarkerCluster JS -->
<script src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/leaflet.markercluster.js"></script>
<script src="~/js/map.js" asp-append-version="true"></script>