@model BitirmeProjesi.Models.PollutionData

@{
    ViewData["Title"] = "Veri Girişi";
}

<link rel="stylesheet" href="~/css/pollution-entry.css" />

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-1">Kirlilik Verisi Girişi</h2>
                <p class="text-muted">Lütfen ölçüm değerlerini dikkatli bir şekilde giriniz</p>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                </div>
            }

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-outline">
                            <input asp-for="Latitude" type="number" step="any" id="latitude" class="form-control" />
                            <label class="form-label" asp-for="Latitude">
                                <i class="fas fa-map-marker-alt me-2"></i>Enlem
                            </label>
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-outline">
                            <input asp-for="Longitude" type="number" step="any" id="longitude" class="form-control" />
                            <label class="form-label" asp-for="Longitude">
                                <i class="fas fa-map-marker-alt me-2"></i>Boylam
                            </label>
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-outline mb-4">
                    <select asp-for="MetalType" class="form-select">
                        <option value="">Metal Tipini Seçin</option>
                        <option value="Kurşun">Kurşun (Pb)</option>
                        <option value="Civa">Civa (Hg)</option>
                        <option value="Kadmiyum">Kadmiyum (Cd)</option>
                        <option value="Arsenik">Arsenik (As)</option>
                    </select>
                    <label class="form-label" asp-for="MetalType">
                        <i class="fas fa-flask me-2"></i>Metal Tipi
                    </label>
                    <span asp-validation-for="MetalType" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <input asp-for="Value" type="number" step="0.01" id="value" class="form-control" />
                    <label class="form-label" asp-for="Value">
                        <i class="fas fa-vial me-2"></i>Ölçüm Değeri (mg/kg)
                    </label>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 ripple-surface">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.form-outline').forEach((formOutline) => {
            new mdb.Input(formOutline).init();
        });
    </script>
} 